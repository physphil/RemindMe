<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="Reminder"/>

    <style name="Reminder.Title">
        <item name="android:paddingStart">@dimen/global_margin_small</item>
        <item name="android:paddingEnd">@dimen/global_margin_small</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ReminderListTime">
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/global_margin_typical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_reminder_list_time</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pickers" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Button">
        <item name="android:paddingStart">@dimen/global_margin_xxlarge</item>
        <item name="android:paddingEnd">@dimen/global_margin_xxlarge</item>
    </style>

    <style name="Button.Large">
        <item name="android:textSize">@dimen/text_size_button_primary</item>
    </style>

    <style name="Button.Large.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="Button.Small">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/global_margin_small</item>
        <item name="android:paddingBottom">@dimen/global_margin_small</item>
        <item name="android:paddingStart">@dimen/global_margin_typical</item>
        <item name="android:paddingEnd">@dimen/global_margin_typical</item>
    </style>

    <style name="Button.Small.Primary">
        <item name="android:background">@drawable/bg_button_primary</item>
    </style>

    <style name="Button.Small.Accent">
        <item name="android:background">@drawable/bg_button_accent</item>
    </style>

</resources>
